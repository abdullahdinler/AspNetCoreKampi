@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="banner-bottom">
    <!--/blog-->
    <div class="container">
        <div class="row">
            <!--left-->
            @foreach (var item in Model)
            {
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="blog-grid-top">
                    <div class="b-grid-top">
                        <div class="blog_info_left_grid">
                            <a href="single.html">
                                <img src="@item.Image" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="blog-info-middle">
                            <ul>
                                <li>
                                    <a href="#">
                                        <i class="far fa-calendar-alt"></i> @item.CreateDate.ToString("MMM dd, yyyy")
                                    </a>
                                </li>
                                <li class="mx-2">
                                    <a href="#">
                                        <i class="far fa-thumbs-up">@item.Category.Name</i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="far fa-comment"></i> 15 Comments
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>

                    <h3>
                        <a href="single.html">@item.Title </a>
                    </h3>
                    <p>
                        @item.Content
                    </p>

                </div>
                
               
                @await Component.InvokeAsync("CommentList", new { id = @item.Id })
                @await Component.InvokeAsync("AddComment", new { id = @item.Id })
                @*<partial name="~/Views/Comment/ListComment.cshtml" />*@
                @*<partial name="~/Views/Comment/AddComment.cshtml" />*@
            </div>
            }
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                   
                    <partial name="/Views/NewsLatter/index.cshtml"/>
                    @await Component.InvokeAsync("CategoryList")
                    @await Component.InvokeAsync("AuthorWithBlogList")


                    <div class="single-gd tech-btm">
                        <h4>Eklenen Son Yazılar</h4>
                        <div class="blog-grids">
                            <div class="blog-grid-left">
                                <a href="single.html">
                                    <img src="/images/b1.jpg" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="blog-grid-right">

                                <h5>
                                    <a href="single.html">Pellentesque dui, non felis. Maecenas male</a>
                                </h5>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>

