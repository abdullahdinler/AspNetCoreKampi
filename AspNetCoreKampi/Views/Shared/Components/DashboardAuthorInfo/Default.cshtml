@model IEnumerable<EntityLayer.Concrete.Author>

@foreach (var item in Model)
{
    <div class="d-flex mt-5 align-items-top">
        <img src="@item.Image" class="img-sm rounded-circle mr-3" alt="image">
        <div class="mb-0 flex-grow">
            <h5 class="mr-2 mb-2">@item.Name</h5>
            <p class="mb-0 font-weight-light">@item.About</p>
        </div>
        <div class="ml-auto">
            <i class="mdi mdi-heart-outline text-muted"></i>
        </div>
    </div>
}
