@model IEnumerable<EntityLayer.Concrete.Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Blog Yazılarınız</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlik </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.Image" class="mr-2" alt="image"> 
                                    </td>
                                    <td> @item.Title </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.Name</label>
                                    </td>
                                    <td> @item.CreateDate.ToString("dd MMMM yyyy") </td>
                                    <td> <a class="btn btn-outline-dark btn-sm" href="/Blog/Details/@item.Id"> Git </a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>