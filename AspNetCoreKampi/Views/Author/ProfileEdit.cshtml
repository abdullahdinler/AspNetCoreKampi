@model EntityLayer.Concrete.Author
@{
    ViewData["Title"] = "ProfileEdit";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Güncelleme</h4>
            <p class="card-description">  </p>
            <form asp-controller="Author" asp-action="ProfileEdit" class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <label for="exampleInputName1">Yazar İsim</label>
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color: red" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail</label>
                    <input asp-for="Mail" class="form-control" id="exampleInputEmail2" placeholder="mail">
                    @Html.ValidationMessageFor(x => x.Mail, "", new { @style = "color: red" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Parola</label>
                    <input asp-for="Password" name="pass1" class="form-control" id="exampleInputEmail3" placeholder="Password">
                    @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color: red" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Parolayı Doğrulayın</label>
                    <input class="form-control" asp-for="Password" name="pass2" id="exampleInputEmail4" placeholder="Password">
                    @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color: red" })
                    <p class="text text-danger">@ViewBag.hata</p>
                </div>


                <div class="form-group">
                    <label for="Image">Image</label>
                    <input type="file" class="form-control-file" id="Image" asp-for="Image">
                    @Html.ValidationMessageFor(x => x.Image, "", new { @style = "color: red" })
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkımda</label>
                    <textarea class="form-control" asp-for="About" id="exampleTextarea1" rows="10"></textarea>
                    @Html.ValidationMessageFor(x => x.About, "", new { @style = "color: red" })
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Düzenle</button>
            </form>
        </div>
    </div>
</div>

