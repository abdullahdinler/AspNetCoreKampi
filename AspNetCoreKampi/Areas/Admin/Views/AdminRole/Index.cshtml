@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="text-right"><a class="btn btn-outline-success" href="/Admin/AdminRole/Add/">New Role</a></div>
<table class="table table-bordered table-responsive-xl">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td><a class="btn btn-outline-warning" href="/Admin/AdminRole/RoleUpdate/@item.Id">Update</a></td>
    <td><a class="btn btn-outline-danger" href="/Admin/AdminRole/RoleDelete/@item.Id">Delete</a></td>
</tr>
    }

</table>

